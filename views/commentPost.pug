form#commentPost(method="POST" action="/blog/comment/" + user._id + '/' + post._id)
  .input-group.input-group-sm
    label.sr-only(for="commentText") Post
    input(type="hidden",
          name="commentAuthor",
          id="commentAuthor",
          value=viewer.name || viewer.email)
    input.form-control(type="text",
          name="commentText",
          id="commentText"
          placeholder="Répondez à ce post...")
    span.input-group-btn
      button.btn.btn-dark(type="submit")
        i.fa.fa-send
