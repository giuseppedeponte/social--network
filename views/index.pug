extends layout

block content
  div.row
    .col-sm-12
      h2= title
      if (flashMessage.length)
        .alert.alert-warning(role="alert")
          strong= flashMessage
      hr
    .col-sm-6.text-center.mb-4
      img.img-fluid.img-thumbnail.mw-50(title="Credit: Jacopo Rosati" src="/images/social-network-tarots.jpg" alt="Social Network Tarots")
    .col-sm-6.text-center.mt-4
      if (stats)
        .alert.alert-success.py-1.mb-4
          strong #{stats.users} utilisateur(s) inscrit(s)
        .alert.alert-success.py-1.mb-4
          strong #{stats.connections === 0 && user ? 1 : stats.connections} utilisateur(s) connecté(s)
        .alert.alert-success.py-1.mb-4
          strong #{stats.posts} message(s) publié(s)
        .alert.alert-success.py-1.mb-4
          strong #{stats.topics} fil(s) de discussion privé(s)
        .alert.alert-success.py-1.mb-4
          strong #{stats.chats} conversation(s) en temps réel
      .btn-group.mb-2
        if (user)
          a.btn.btn-light(href="/user/")
            span.fa.fa-fw.fa-user
            | &nbsp;Profile
          a.btn.btn-danger(href="/user/logout")
            span.fa.fa-fw.fa-sign-out
            | &nbsp;Logout
        if (!user)
          a.btn.btn-light(href="/user/login")
            span.fa.fa-fw.fa-sign-in
            | &nbsp;Connexion
          a.btn.btn-warning(href="/user/signup")
            span.fa.fa-fw.fa-handshake-o
            | &nbsp;Inscription
      .col-sm-12.mb-4
        a.btn.btn-link(href="#about" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="about")
          span.fa.fa-question-circle
          | &nbsp;À propos
        br
        #about.collapse
          .card.card-body
            strong Social Network          
            span est un site web développé en 2018 par Giuseppe De Ponte dans le cadre de la formation 
            em &nbsp;Développeur intégrateur Web Javascript Fullstack
            span .
            span Le code source de ce site et des autres sites développés pendante cette formation sont disponibles sur  
            a(target="_blank" href="http://github.com/giuseppedeponte") GitHub
            span .
            .text-center
              img.img-fluid.w-75(src="/images/narwhal.gif" alt="This narwhal loves you" title="Credit: Chibird")
            
