.card.mx-auto.my-2.my-md-0
  .card-body
    h5.card-title Fil d'actualit√©
  ul.list-group.list-group-flush.text-left
    li.list-group-item
      include ./createPost.pug
    each post in user.posts
      li.list-group-item
        .row
          .col-10
            small #{post.date.toString().substr(4,21)}
            br
            strong #{post.author} :
            br
            span=post.text
            hr.my-1
            each comment in post.comments
              span.text-secondary.mx-2
                i.fa.fa-terminal
                strong  #{comment.author} : 
                | #{comment.text}
          .col-2.text-right
            a(href="/blog/delete/" + user._id + "/" + post._id)
              i.fa.fa-trash
          .col-12.mt-2
            include ./commentPost.pug
