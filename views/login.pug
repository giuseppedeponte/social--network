extends layout

block content
  div.text-center.row
    .col-sm-12
      h1= title
      if (message.length)
        .alert.alert-warning(role="alert")
          strong= message
      hr
    .col-sm-12
      form(method="POST" action="/user/login")
        .form-group.text-left
          label(for="email") Email *
          input#email.form-control(type="email"
                                   name="email"
                                   placeholder="Adresse email"
                                   required
                                   autofocus)
        .form-group.text-left
          label(for="password") Mot de passe *
          input#password.form-control(type="password"
                                      name="password"
                                      placeholder="Mot de passe"
                                      required)
        input.btn.btn-lg.btn-block.btn-dark(type="submit" value="Se connecter")
        .btn-group-vertical.btn-group-sm.mt-2
          a.btn.btn-block(href="/user/signup")
            | Pas encore inscrits ? 
          a.btn.btn-block(href="/")
            | Mot de passe oubli√© ?
